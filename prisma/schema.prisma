datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// model 
model Post {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  title String
  slug String @unique
  content String @db.Text
  image String?
  views Int @default(0)
  nbComments Int @default(0)
  // user
  // category




}